{
  "name": "wissen-handeln-website",
  "type": "module",
  "version": "1.0.0",
  "description": "Astro website with AI content generation for wissen-handeln.com",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "typecheck": "astro check",
    "lint": "eslint src --ext .ts,.tsx,.astro",
    "format": "prettier --write \"**/*.{js,ts,astro,json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:deployment": "vitest run tests/deployment"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/tailwind": "^5.1.2",
    "astro": "^4.16.18",
    "openai": "^4.73.0",
    "zod": "^3.24.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@playwright/test": "^1.49.1",
    "@vitest/ui": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.18.0",
    "eslint-plugin-astro": "^1.3.2",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.15.0",
    "vitest": "^2.1.8"
  }
}
