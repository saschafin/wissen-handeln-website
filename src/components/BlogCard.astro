---
import { formatDate, truncate } from '@/lib/utils';

interface Props {
  title: string;
  excerpt: string;
  slug: string;
  publishedDate: Date;
  category: string;
  readingTime: number;
}

const { title, excerpt, slug, publishedDate, category, readingTime } = Astro.props;
---

<article class="card h-full flex flex-col">
  <div class="p-6 md:p-8 flex flex-col flex-grow">
    <div class="flex items-center gap-3 mb-4 text-sm">
      <span class="px-3 py-1 bg-primary-100 text-primary-700 rounded-full font-medium">
        {category}
      </span>
      <span class="text-gray-500">
        {readingTime} Min. Lesezeit
      </span>
    </div>

    <h3 class="text-2xl font-bold text-gray-900 mb-3 hover:text-primary-600 transition-colors">
      <a href={`/blog/${slug}`}>
        {title}
      </a>
    </h3>

    <p class="text-gray-600 mb-6 flex-grow">
      {truncate(excerpt, 150)}
    </p>

    <div class="flex items-center justify-between pt-4 border-t border-gray-200">
      <time class="text-sm text-gray-500" datetime={publishedDate.toISOString()}>
        {formatDate(publishedDate)}
      </time>

      <a
        href={`/blog/${slug}`}
        class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium"
      >
        Weiterlesen
        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"
          />
        </svg>
      </a>
    </div>
  </div>
</article>
