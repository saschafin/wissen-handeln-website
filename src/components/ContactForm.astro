<section class="bg-white rounded-2xl shadow-xl p-8 md:p-12">
  <h2 class="text-3xl font-bold text-gray-900 mb-6">
    Kontaktieren Sie uns
  </h2>

  <form id="contact-form" class="space-y-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
          Name *
        </label>
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition"
          placeholder="Ihr Name"
        />
      </div>

      <div>
        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
          E-Mail *
        </label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition"
          placeholder="ihre@email.de"
        />
      </div>
    </div>

    <div>
      <label for="company" class="block text-sm font-medium text-gray-700 mb-2">
        Unternehmen
      </label>
      <input
        type="text"
        id="company"
        name="company"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition"
        placeholder="Ihr Unternehmen"
      />
    </div>

    <div>
      <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
        Betreff *
      </label>
      <input
        type="text"
        id="subject"
        name="subject"
        required
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition"
        placeholder="Worum geht es?"
      />
    </div>

    <div>
      <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
        Nachricht *
      </label>
      <textarea
        id="message"
        name="message"
        required
        rows="6"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition resize-none"
        placeholder="Ihre Nachricht..."
      ></textarea>
    </div>

    <div class="flex items-start">
      <input
        type="checkbox"
        id="privacy"
        name="privacy"
        required
        class="mt-1 w-4 h-4 text-primary-600 border-gray-300 rounded focus:ring-primary-500"
      />
      <label for="privacy" class="ml-2 text-sm text-gray-600">
        Ich habe die <a href="/datenschutz" class="text-primary-600 hover:text-primary-700">Datenschutzerklärung</a> zur Kenntnis genommen. *
      </label>
    </div>

    <button
      type="submit"
      class="btn-primary w-full md:w-auto"
    >
      Nachricht senden
    </button>

    <div
      id="form-message"
      class="hidden mt-4 p-4 rounded-lg"
      role="status"
      aria-live="polite"
    ></div>
  </form>
</section>

<script is:inline lang="ts">
  type MessageVariant = 'info' | 'success' | 'error';

  const formElement = document.getElementById('contact-form');
  const messageElement = document.getElementById('form-message');

  const variantClasses: Record<MessageVariant, string[]> = {
    info: ['bg-blue-100', 'text-blue-800', 'border', 'border-blue-200'],
    success: ['bg-green-100', 'text-green-800', 'border', 'border-green-200'],
    error: ['bg-red-100', 'text-red-800', 'border', 'border-red-200'],
  };

  const resetMessageClasses = (element: HTMLDivElement) => {
    element.classList.remove(
      'hidden',
      'bg-blue-100',
      'text-blue-800',
      'bg-green-100',
      'text-green-800',
      'bg-red-100',
      'text-red-800',
      'border',
      'border-blue-200',
      'border-green-200',
      'border-red-200'
    );
  };

  const setMessage = (options: { text: string; variant: MessageVariant }) => {
    if (!(messageElement instanceof HTMLDivElement)) {
      return;
    }

    resetMessageClasses(messageElement);
    messageElement.classList.add(...variantClasses[options.variant]);
    messageElement.textContent = options.text;
  };

  type ContactFormData = {
    name: string;
    email: string;
    company?: string;
    subject: string;
    message: string;
    privacy: string;
  };

  const serializeForm = (form: HTMLFormElement): ContactFormData => {
    const formData = new FormData(form);
    const entries = Object.fromEntries(formData.entries());

    return {
      name: String(entries.name ?? ''),
      email: String(entries.email ?? ''),
      company: entries.company ? String(entries.company) : undefined,
      subject: String(entries.subject ?? ''),
      message: String(entries.message ?? ''),
      privacy: String(entries.privacy ?? ''),
    };
  };

  const simulateSubmission = async (payload: ContactFormData) => {
    console.info('Contact form submission', payload);
    await new Promise<void>(resolve => setTimeout(resolve, 1500));
  };

  if (formElement instanceof HTMLFormElement) {
    const submitButton = formElement.querySelector<HTMLButtonElement>('button[type="submit"]');

    formElement.addEventListener('submit', async event => {
      event.preventDefault();

      if (!(messageElement instanceof HTMLDivElement)) {
        console.warn('The contact form message element is missing.');
        return;
      }

      const submissionData = serializeForm(formElement);

      try {
        if (submitButton) {
          submitButton.disabled = true;
        }

        setMessage({ text: 'Nachricht wird gesendet...', variant: 'info' });

        await simulateSubmission(submissionData);

        setMessage({
          text: 'Vielen Dank! Ihre Nachricht wurde erfolgreich gesendet. Wir melden uns in Kürze bei Ihnen.',
          variant: 'success',
        });

        formElement.reset();
      } catch (error) {
        console.error('Fehler beim Senden der Nachricht', error);
        setMessage({
          text: 'Es gab ein Problem beim Versenden Ihrer Nachricht. Bitte versuchen Sie es später erneut.',
          variant: 'error',
        });
      } finally {
        if (submitButton) {
          submitButton.disabled = false;
        }
      }
    });
  } else {
    console.warn('Contact form elements could not be found in the document.');
  }
</script>
