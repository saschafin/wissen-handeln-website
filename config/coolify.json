{
  "name": "wissen-handeln-website",
  "description": "Wissen & Handeln website deployed with Coolify",
  "type": "dockerfile",
  "deployment": {
    "server": "173.249.21.101",
    "branch": "main",
    "build_command": "docker build -t wissen-handeln-website .",
    "dockerfile_path": "./Dockerfile",
    "context": ".",
    "auto_deploy": true,
    "watch_paths": [
      "src/**/*",
      "public/**/*",
      "astro.config.mjs",
      "package.json"
    ]
  },
  "network": {
    "port": 80,
    "expose": true,
    "proxy_enabled": true,
    "https_enabled": true,
    "https_redirect": true,
    "custom_domains": []
  },
  "resources": {
    "cpu_limit": "1",
    "memory_limit": "512M",
    "memory_reservation": "256M"
  },
  "health_check": {
    "enabled": true,
    "path": "/health",
    "interval": 30,
    "timeout": 3,
    "retries": 3,
    "start_period": 10
  },
  "environment_variables": {
    "NODE_ENV": "production",
    "PUBLIC_SITE_URL": "${PUBLIC_SITE_URL}",
    "PUBLIC_API_URL": "${PUBLIC_API_URL}"
  },
  "volumes": [],
  "restart_policy": "unless-stopped",
  "logging": {
    "driver": "json-file",
    "options": {
      "max-size": "10m",
      "max-file": "3"
    }
  },
  "labels": {
    "app": "wissen-handeln-website",
    "environment": "production",
    "managed-by": "coolify"
  },
  "pre_deployment_command": "",
  "post_deployment_command": "echo 'Deployment completed successfully'",
  "backup": {
    "enabled": false
  },
  "monitoring": {
    "enabled": true,
    "alerts": {
      "cpu_threshold": 80,
      "memory_threshold": 90,
      "disk_threshold": 85
    }
  }
}
